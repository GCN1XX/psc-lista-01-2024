programa {
  caracter nome
  inteiro idade
  real altura

  funcao inicio() 
  {
    escreva("Digite seu nome: ")
    leia(nome)

    escreva("Digite sua idade: ")
    leia(idade)

    escreva("Digite sua altura (em metros): ")
    leia(altura)
    
  escreva("Seu nome é: ", nome, "\n")
  escreva ("Sua idade é: ", idade, " anos\n")
  escreva ("Seu altura é: ", altura, "metros\n")
    
  }
}
